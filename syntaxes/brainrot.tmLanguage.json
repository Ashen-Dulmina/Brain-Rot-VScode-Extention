{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "Brain Rot",
    "patterns": [
        {
            "include": "#comments"
        },
        {
            "include": "#keywords"
        },
        {
            "include": "#strings"
        },
        {
            "include": "#functions"
        }
    ],
    "repository": {
        "comments": {
            "patterns": [{
                "name": "comment.line.brainrot",
                "match": "--.*"
            }]
        },
        "keywords": {
            "patterns": [{
                "name": "keyword.control.brainrot",
                "match": "\\b(byAnyChance|whenItsNot|cutThisShit|touchGrass)\\b"
            }]
        },
        "strings": {
            "patterns": [{
                "name": "string.quoted.double.brainrot",
                "begin": "\"",
                "end": "\"",
                "patterns": [
                    {
                        "name": "constant.character.escape.brainrot",
                        "match": "\\\\."
                    }
                ]
            }]
        },
        "functions": {
            "patterns": [{
                "name": "support.function.freespeech.brainrot",
                "match": "\\bfreespeech\\b"
            }]
        }
    },
    "scopeName": "source.rot"
}
