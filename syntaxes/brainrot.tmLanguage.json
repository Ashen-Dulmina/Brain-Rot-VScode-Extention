{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Brain-Rot",
  "scopeName": "source.brainrot",
  "patterns": [
    { "include": "#keywords" },
    { "include": "#operators" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#booleans" },
    { "include": "#comments" },
    { "include": "#functions" }
  ],
  "repository": {
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.brainrot",
          "match": "\\b(make|be|byAnyChance|whenItsNot|activity|mindset|iz|iz Beta|iz Alpha)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.brainrot",
          "match": "\\b(pluS|minuS|multiplY|dividE)\\b"
        }
      ]
    },
    "strings": {
      "name": "string.quoted.double.brainrot",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.brainrot",
          "match": "\\\\."
        }
      ]
    },
    "numbers": {
      "name": "constant.numeric.brainrot",
      "match": "\\b\\d+(\\.\\d+)?\\b"
    },
    "booleans": {
      "patterns": [
        {
          "name": "constant.language.boolean.brainrot",
          "match": "\\b(NOCAP|CAP|NOTHING)\\b"
        }
      ]
    },
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-dash.brainrot",
          "begin": "--",
          "end": "$"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "freespeech.function.brainrot",
          "match": "\\b(freespeech\\|\\|)\\b"
        },
        {
          "name": "entity.name.function.brainrot",
          "match": "\\bmindset\\s+\\w+\\[\\]"
        }
      ]
    }
  },
  "scopeName": "source.brainrot"
}
